<Window x:Class="SimpleAsepriteToSpine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleAsepriteToSpine"
        mc:Ignorable="d"
        Title="SATS 0.1v" Height="218" Width="321" ResizeMode="CanResize">
    <Grid Margin="0,0,2,0">
        <Button Height="23" Margin="0,10,10,0" Click="Button_Click_FindAseprite" HorizontalAlignment="Right" VerticalAlignment="Top" Width="38">찾기</Button>
        <TextBox x:Name="tbAsepriteFilePath" Height="23" Margin="10,10,53,0" VerticalAlignment="Top" Width="Auto" VerticalContentAlignment="Center" Text="Aseprite.exe 위치를 찾아라"/>
        <Button BorderBrush="Black" BorderThickness="1" Margin="10,38,10,10" Click="Button_Click_FindJson">
            <TextBlock TextWrapping="Wrap" Text="파일을 가져와라(.ase)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Button>
    </Grid>
</Window>
